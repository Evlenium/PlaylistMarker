<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ButtonMainMenuStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">16dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:layout_weight">1</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:backgroundTint">?attr/button_main_menu_color</item>
        <item name="android:textColor">?attr/text_button_main_menu_color</item>
    </style>

    <style name="TextMenuSettings">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/text_settings_color</item>
    </style>

    <style name="IconMenuSettings">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_marginRight">12dp</item>
        <item name="android:background">?attr/background_settings_color</item>
    </style>

    <style name="SecondsActivityMediumTextAppearance">
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textColor">?attr/title_search_color</item>
        <item name="android:fontWeight">500</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="AdditionalButtonSearch">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:paddingStart">8dp</item>
        <item name="android:paddingEnd">6dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bt_update_corner</item>
        <item name="android:textColor">?attr/background_search_color</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TextConstMediaLibrary">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/text_audio_player_grey_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextAttributeMediaLibrary">
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textColor">?attr/text_audio_player_color</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="TextToolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">22sp</item>
        <item name="android:padding">@dimen/padding_toolbar</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:fontWeight">500</item>
        <item name="android:backgroundTint">?attr/background_media_color</item>
        <item name="android:textColor">?attr/text_media_color</item>
    </style>

    <style name="TabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="textAllCaps">false</item>
        <item name="fontFamily">@font/ys_display_medium</item>
        <item name="fontWeight">500</item>
    </style>

    <style name="AdditionalButtonNewPlaylist">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">36dp</item>
        <item name="android:paddingHorizontal">14dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:background">@drawable/bt_update_corner</item>
        <item name="android:textColor">?attr/background_search_color</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_14</item>
    </style>

    <style name="ButtonNewPlaylist">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:layout_marginBottom">32dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/YPwhite</item>
        <item name="android:fontWeight">500</item>
        <item name="android:fontFamily">@font/ys_display_medium</item>
        <item name="android:textSize">@dimen/text_size_16</item>
    </style>
</resources>