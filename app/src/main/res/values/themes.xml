<resources>

    <!-- Base attributes main. -->
    <attr name="background_main_menu_color" />
    <attr name="text_button_main_menu_color" />
    <attr name="title_main_menu_color" />
    <attr name="button_main_menu_color" />
    <attr name="icon_back_color" />

    <!-- Base attributes settings. -->
    <attr name="background_settings_color" />
    <attr name="title_settings_color" />
    <attr name="icons_settings_color" />
    <attr name="switcher_settings_color" />
    <attr name="switcher_settings_color_background" />
    <attr name="text_settings_color" />

    <!-- Base attributes search. -->
    <attr name="background_search_color" />
    <attr name="title_search_color" />
    <attr name="text_search_color" />
    <attr name="cursor_search_color" />
    <attr name="icon_search_color" />
    <attr name="editor_search_color" />
    <attr name="composition_name_search_color" />
    <attr name="compositor_name_search_color" />
    <attr name="button_clear_text_icon" />

    <!-- Base attributes audio player. -->
    <attr name="background_audio_player_color" />
    <attr name="text_audio_player_color" />
    <attr name="icon_like_color" />
    <attr name="icon_color" />
    <attr name="text_audio_player_grey_color" />
    <attr name="text_audio_player_grey_color_icon" />
    <attr name="bottom_sheet_stretcher" />

    <!-- Base attributes media library. -->
    <attr name="background_media_color" />
    <attr name="text_media_color" />
    <attr name="text_media_grey_color" />
    <attr name="text_media_grey_color_icon" />

    <!-- Base attributes bottom navigation. -->
    <attr name="background_bottom_navigation" />
    <attr name="text_navigation_color" />
    <attr name="select_text_navigation_color" />

    <!-- Base attributes playlist fragment. -->
    <attr name="background_playlist" />
    <attr name="text_playlist" />
    <attr name="select_text_playlist" />


    <!-- Base application theme. -->
    <style name="Base.Theme.PlaylistMarker" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Main menu. -->
        <item name="background_main_menu_color">@color/YPblue</item>
        <item name="text_button_main_menu_color">@color/YPblack</item>
        <item name="title_main_menu_color">@color/YPwhite</item>
        <item name="button_main_menu_color">@color/YPwhite</item>
        <item name="icon_back_color">@color/YPblack</item>
        <!-- Settings menu. -->
        <item name="background_settings_color">@color/YPwhite</item>
        <item name="title_settings_color">@color/YPblack</item>
        <item name="icons_settings_color">@color/YPtextgray</item>
        <item name="switcher_settings_color">@color/YPtextgray</item>
        <item name="switcher_settings_color_background">@color/YPlightgray</item>
        <item name="text_settings_color">@color/YPblack</item>
        <!-- Search menu. -->
        <item name="background_search_color">@color/YPwhite</item>
        <item name="title_search_color">@color/YPblack</item>
        <item name="text_search_color">@color/YPblack</item>
        <item name="cursor_search_color">@color/YPblue</item>
        <item name="icon_search_color">@color/YPtextgray</item>
        <item name="editor_search_color">@color/YPlightgray</item>
        <item name="composition_name_search_color">@color/YPblack</item>
        <item name="compositor_name_search_color">@color/YPtextgray</item>
        <item name="button_clear_text_icon">@color/YPtextgray</item>
        <!-- Base attributes audio player. -->
        <item name="background_audio_player_color">@color/YPwhite</item>
        <item name="text_audio_player_color">@color/YPblack</item>
        <item name="icon_like_color">@color/YPRed</item>
        <item name="icon_color">@color/YPwhite</item>
        <item name="text_audio_player_grey_color">@color/YPtextgray</item>
        <item name="text_audio_player_grey_color_icon">@color/YPGreyIcon</item>
        <item name="bottom_sheet_stretcher">@color/YPlightgray</item>
        <!-- Base attributes media. -->
        <item name="background_media_color">@color/YPwhite</item>
        <item name="text_media_color">@color/YPblack</item>
        <!-- Base attributes bottom navigation. -->
        <item name="background_bottom_navigation">@color/YPwhite</item>
        <item name="text_navigation_color">@color/YPblack</item>
        <item name="select_text_navigation_color">@color/YPblue</item>
        <!-- Base attributes bottom navigation. -->
        <item name="background_playlist">@color/YPwhite</item>
        <item name="text_playlist">@color/YPblack</item>
        <item name="select_text_playlist">@color/YPblue</item>
        <!-- Style to use for Snackbars in this theme. -->
        <item name="snackbarStyle">@style/MaterialSnackbarTheme</item>
        <item name="snackbarTextViewStyle">@style/MaterialSnackbarTextViewTheme</item>
    </style>

    <!-- Base attributes bottom navigation view. -->
    <style name="BottomNavigationView" parent="Widget.MaterialComponents.BottomNavigationView">
        <item name="android:background">?attr/background_bottom_navigation</item>
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textAllCaps">false</item>
        <item name="itemTextColor">@drawable/selector_bottom_navigation</item>
        <item name="itemIconTint">@drawable/selector_bottom_navigation</item>
        <item name="enforceMaterialTheme">false</item>
        <item name="enforceTextAppearance">false</item>
        <item name="compatShadowEnabled">false</item>
        <item name="itemRippleColor">@null</item>
    </style>

    <!-- Base attributes TextInputLayout. -->
    <style name="MyOutlinedBox" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">16dp</item>
        <item name="android:textColor">?attr/text_media_color</item>
        <item name="android:textColorHint">?attr/text_media_color</item>
        <item name="boxStrokeColor">@drawable/text_input_box_stroke</item>
    </style>

    <!-- Base attributes TextEditorPlaylistStyle. -->
    <style name="TextEditorPlaylistStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/text_size_16</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:textStyle">normal</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:imeOptions">actionDone</item>
        <item name="android:inputType">text</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">?attr/text_media_color</item>
        <item name="android:textColorHint">?attr/text_media_color</item>
        <item name="android:textCursorDrawable">@drawable/text_cursor</item>
    </style>

    <!-- Base attributes Dialog PlaylistEntity. -->
    <style name="MyAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:textColorPrimary">@color/YPblack</item>
        <item name="android:background">@color/YPwhite</item>
        <item name="buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YPblue</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/YPblue</item>
    </style>

    <!-- Style to use for Snackbars in this theme. -->
    <style name="MaterialSnackbarTheme" parent="@style/Widget.MaterialComponents.Snackbar">
        <item name="android:background">@color/YPblack</item>
    </style>


    <style name="MaterialSnackbarTextViewTheme" parent="@style/Widget.MaterialComponents.Snackbar.TextView">
        <item name="android:textColor">@color/YPwhite</item>
        <item name="android:fontFamily">@font/ys_display_regular</item>
        <item name="android:fontWeight">400</item>
        <item name="android:textSize">14sp</item>
    </style>


    <!-- Base style main. -->
    <style name="Theme.PlaylistMarker" parent="Base.Theme.PlaylistMarker">

    </style>
</resources>