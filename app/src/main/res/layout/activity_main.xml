<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YPblue"
    android:orientation="vertical">

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginVertical="4dp"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="52dp"
        android:backgroundTint="@color/YPblue"
        android:text="@string/app_name"
        android:textAlignment="textStart"
        android:textAllCaps="false"
        android:textColor="@color/YPwhite"
        android:textSize="22sp" />

    <Button
        android:id="@+id/search"
        style="@style/ButtonMainMenuStyle"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="4dp"
        android:text="@string/search"
        app:cornerRadius="@dimen/buttonMainCornerRadius"
        app:icon="@drawable/search_mode"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/buttonMainIconPadding"
        app:iconTint="@color/YPblack" />

    <Button
        android:id="@+id/mediaLibrary"
        style="@style/ButtonMainMenuStyle"
        android:layout_marginVertical="4dp"
        android:text="@string/media"
        app:cornerRadius="@dimen/buttonMainCornerRadius"
        app:icon="@drawable/light_mode"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/buttonMainIconPadding"
        app:iconTint="@color/YPblack" />

    <Button
        android:id="@+id/settings"
        style="@style/ButtonMainMenuStyle"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="28dp"
        android:text="@string/settings"
        app:cornerRadius="@dimen/buttonMainCornerRadius"
        app:icon="@drawable/settings"
        app:iconGravity="textStart"
        app:iconPadding="@dimen/buttonMainIconPadding"
        app:iconTint="@color/YPblack" />
</LinearLayout>