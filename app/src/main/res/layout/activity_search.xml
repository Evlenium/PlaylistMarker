<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/background_search_color"
    android:orientation="vertical"
    tools:context=".SearchActivity">

    <Toolbar
        android:id="@+id/toolbarSearchActivity"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:collapseIcon="@drawable/arrow_back_mode"
        android:padding="4dp"
        android:title="@string/search">
    </Toolbar>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginVertical="8dp">

        <EditText
            android:id="@+id/inputEditTextSearch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rounded_edit_text"
            android:drawableStart="@drawable/search_mode_search_menu"
            android:fontFamily="@font/ys_display_regular"
            android:hint="@string/search"
            android:inputType="text"
            android:lines="1"
            android:minHeight="40dp"
            android:drawablePadding="8dp"
            android:paddingStart="12dp"
            android:textColor="?attr/text_search_color"
            android:textColorHint="?attr/icon_search_color"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textFontWeight="400"
            android:textSize="16sp" />
        <ImageView

            android:id="@+id/clearTextSearchIcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            android:layout_gravity="right|center_vertical"
            android:src="@drawable/clear"
            android:visibility="gone"/>
    </FrameLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_tracks"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="16dp"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/track_item"
        android:visibility="gone"
        />

</LinearLayout>