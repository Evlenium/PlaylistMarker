<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/YPwhite"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginEnd="52dp"
        android:padding="4dp">

        <ImageButton
            android:id="@+id/buttonBackToMainFromSettings"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/YPwhite"
            android:contentDescription="@string/back"
            android:padding="12dp"
            android:src="@drawable/arrow_back_mode" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:paddingStart="12dp"
            android:paddingTop="10dp"
            android:paddingEnd="86dp"
            android:paddingBottom="12dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/settings"
                android:textColor="@color/YPblack"
                android:textSize="22sp" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp">
        <TextView
            style="@style/TextMenuSettings"
            android:text="@string/black_theme"
            />
        <androidx.appcompat.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="11dp"
            android:layout_marginEnd="6dp"
            android:layout_marginBottom="10dp"
            android:paddingVertical="11dp"
            android:paddingStart="9dp"
            android:paddingEnd="12dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextMenuSettings"
            android:layout_marginVertical="19dp"
            android:text="@string/share_app" />
        <ImageView
            style="@style/IconMenuSettings"
            android:src="@drawable/send_mode" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextMenuSettings"
            android:layout_marginVertical="19dp"
            android:text="@string/write_to_support" />
        <ImageView
            style="@style/IconMenuSettings"
            android:src="@drawable/support_mode" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            style="@style/TextMenuSettings"
            android:layout_marginVertical="19dp"
            android:text="@string/terms_of_use" />
        <ImageView
            style="@style/IconMenuSettings"
            android:src="@drawable/move_mode"/>
    </LinearLayout>
</LinearLayout>